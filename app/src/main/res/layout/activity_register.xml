<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignInActivity"
    >

    <EditText
        android:id="@+id/emailForReg"
        android:hint="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp" />

    <EditText
        android:hint="password"
        android:id="@+id/passForReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/emailForReg"
        android:layout_marginEnd="11dp"
        android:inputType="textPassword"
        />


    <Spinner
        android:id="@+id/spinnerUserType"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvUserType"
        android:layout_marginEnd="0dp"
        android:entries="@array/spinner_fields" />

    <Spinner
        android:id="@+id/spinnerUserChoice"
        android:layout_width="273dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spinnerUserType" />

    <Button
        android:id="@+id/RegisterBT"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:background="@drawable/signinbackgraound"
        android:text="Register"
        android:textColor="#000" />

    <EditText
        android:hint="name"
        android:id="@+id/nameForReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailForReg"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-82dp" />

    <TextView
        android:id="@+id/tvUserType"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="208dp"
        android:padding="10dp"
        android:text="Are you" />

    <TextView
        android:id="@+id/tvUserChoice"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUserType"
        android:padding="10dp"
        android:text="Year" />


</RelativeLayout>