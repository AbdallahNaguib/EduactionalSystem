<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddSectionActivity">

    <EditText
        android:id="@+id/centerNameInAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="centerName"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/centerAddInAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:hint="centerAddress"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/availSeatsInAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:hint="Available"
        android:inputType="number" />

    <Spinner
        android:id="@+id/dateInTeacher"
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="224dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/dateInTeacher"
        android:paddingLeft="10dp"
        android:text="date" />

    <Spinner
        android:id="@+id/timeInTeacher"
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="175dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/timeInTeacher"
        android:text="time" />

    <TextView
        android:id="@+id/yearTV"
        android:layout_width="98dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="123dp"
        android:paddingLeft="10dp"
        android:text="year" />

    <Spinner
        android:id="@+id/yearInTeacher"
        android:layout_width="282dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/yearTV" />

</RelativeLayout>